{
    "name": "backend",
    "version": "0.0.1",
    "description": "Community based platform",
    "main": "index.js",
    "scripts": {
        "start": "NODE_ENV=prod node index.js",
        "dev": "cross-env NODE_ENV=development nodemon index.js",
        "lint": "eslint .",
        "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
        "build:ui": "rm -rf build && cd ../frontend && npm run build --prod && cp -r build ../backend && cd ../backend",
        "deploy": "cd .. && git subtree push --prefix backend heroku heroku-deploy:main",
        "deploy:full": "npm run build:ui && git checkout heroku-deploy && git add . && git commit -m uibuild && npm run deploy",
        "logs:prod": "heroku logs --tail"
    },
    "author": "Amit Ranjan,Ananya Tapi,Ashutosh Pandey,Hamza Kamal",
    "license": "MIT",
    "dependencies": {
        "@Hamzakam/deep-email-validator": "github:Hamzakam/deep-email-validator",
        "aws-sdk": "^2.1010.0",
        "bcryptjs": "^2.4.3",
        "content-filter": "^1.1.2",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.0.2",
        "mongoose-unique-validator": "^2.0.3",
        "morgan": "^1.10.0",
        "multer": "^1.4.3",
        "password-validator": "^5.1.1"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "jest": "^27.1.1",
        "nodemon": "^2.0.12",
        "supertest": "^6.1.6"
    },
    "jest": {
        "testEnvironment": "node"
    }
}
